@model CurdApplication.Models.Employee;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center text-primary"> Create/ADD Employee </h4>

                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="hidden" asp-for="Id"/>
                            <input type="text" asp-for="Name" class="form-control" placeholder="enter employee name" />

                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="enter city" />

                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="enter state" />

                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control" placeholder="enter salary" />

                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-outline-success float-right" />

                        </div>

                    </form>
                </div>

